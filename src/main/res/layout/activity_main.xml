<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <com.wizardev.customview.view.SlideButton
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:id="@+id/slideButton"
        app:snakeRadius="30dp"
        app:ringLineSize="1dp"
        app:innerText="滑动延时还车"
        app:innerTextSize="15dp"
        app:snakeBarTopText="按住"
        app:snakeBarTextSize="15sp"
        app:snakeBarBottomText="滑动"
        app:snakeBarTextColor="@android:color/white"
        android:layout_height="wrap_content"
      />



</LinearLayout>